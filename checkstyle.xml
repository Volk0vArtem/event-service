<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">

<module name="Checker">
  <!-- Проверка на неиспользуемые импорты -->
  <module name="UnusedImports">
    <property name="allowUnusedImports" value="false"/>
  </module>

  <!-- Правила для отступов -->
  <module name="Indentation">
    <property name="basicOffset" value="4"/>
    <property name="indentLevel" value="1"/>
    <property name="tabWidth" value="4"/>
  </module>

  <!-- Проверка порядка импортов -->
  <module name="ImportOrder">
    <property name="separated" value="true"/>
    <property name="groups" value="javax, java, org"/>
  </module>

  <!-- Проверка на отсутствие пустых строк в конце файла -->
  <module name="FileTabCharacter"/>
  <module name="EmptyLineSeparator">
    <property name="allowNoEmptyLineBetween" value="true"/>
  </module>

  <!-- Проверка на правила именования -->
  <module name="NamingConvention">
    <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
  </module>

  <!-- Прочие стилистические ошибки -->
  <module name="JavadocStyle">
    <property name="checkStyle" value="standard"/>
  </module>
</module>